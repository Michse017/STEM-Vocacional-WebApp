# Flask
FLASK_ENV=development
# Genera uno fuerte en producción
SECRET_KEY=change_me_in_local

# CORS (frontend dev)
FRONTEND_URL="http://localhost:3000"

# Base de datos (SQL Server)
# Ajusta estos valores a tu instancia
DB_SERVER=stemdb.database.windows.net
DB_DATABASE=StemDB
DB_USER=usuario@servidor
# Poner la contraseña real en .env (no aquí)
DB_PASSWORD=
# Driver ODBC instalado en tu sistema (17 o 18)
DB_DRIVER={ODBC Driver 17 for SQL Server}
DB_PORT=1433

# Cuestionarios dinámicos
ENABLE_DYNAMIC_QUESTIONNAIRES=1

# JWT (admins)
JWT_EXPIRES_MIN=30
JWT_REFRESH_DAYS=7
JWT_REFRESH_ROTATE=1

# Compatibilidad temporal con header compartido
# Mantener 0 por defecto; en producción, usar solo JWT
ADMIN_HEADER_FALLBACK=0
# Si activas el fallback, define la clave en .env privado
ADMIN_ACCESS_KEY=
