# Auto-detect text files and normalize line endings
* text=auto

# Prefer LF in repo for source files
*.py   text eol=lf
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.css  text eol=lf
*.html text eol=lf
*.md   text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.sql  text eol=lf

# Windows scripts should use CRLF on checkout
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf
